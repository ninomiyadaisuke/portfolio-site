---
import ResponsiveImage from '@components/ui/image/ResponsiveImage.astro';
import type { ImageMetadata } from 'astro';

type Props = {
	imageData: {
		src: ImageMetadata;
		alt: string;
		widths?: number[];
		sizes?: string;
		loading?: 'lazy' | 'eager';
		decoding?: 'async' | 'sync';
	};
};

const { imageData } = Astro.props;
---

<div class="card">
	<ResponsiveImage
		src={imageData.src}
		alt={imageData.alt}
		widths={imageData.widths}
		sizes={imageData.sizes}
		loading={imageData.loading}
		decoding={imageData.decoding}
	/>
</div>

<style lang="scss" is:global>
	.card {
		padding: 2vw;
		cursor: pointer;
		img {
			aspect-ratio: 16 / 9;
			height: 100%;
			width: 100%;
			object-fit: cover;
			transition: all 0.35s ease-in-out;
		}

		&:hover img {
			transform: scaleY(0.98);
			filter: grayscale(50%);
		}
	}
</style>

import AssetManage from '@assets/images/projects/assets_manage.png';
import SekiSou from '@assets/images/projects/sei_sou_demo.png';

import ProjectCard from './ProjectCard.astro';

const data = [
	{
		title: 'Project Title',
		text: 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam sunt cupiditate ducimus non esse?',
		imageData: {
			src: SekiSou,
			alt: 'Project Image'
